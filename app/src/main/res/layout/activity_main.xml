<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/bgTextView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/royal_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeHomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/wendy_one"
        android:text="Welcome Home!"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ballImageView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="7dp"
        android:rotation="-15"
        app:layout_constraintEnd_toStartOf="@+id/ballTwoImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pokeball" />

    <ImageView
        android:id="@+id/ballTwoImageView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="7dp"
        android:rotation="-15"
        app:layout_constraintStart_toEndOf="@+id/ballImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pokeball" />

    <ImageView
        android:id="@+id/ballThreeImageView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:rotation="-15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ballTwoImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pokeball" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/plannerImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/two_weeks"
        app:civ_border_color="@color/white"
        app:civ_border_width="3dp"
        app:civ_circle_background_color="@color/deep_koamaru"
        app:layout_constraintEnd_toStartOf="@+id/taskImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bgTextView"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/twoWeeksTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="My Planner"
        android:textColor="@color/azureish_white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/plannerImageView"
        app:layout_constraintStart_toStartOf="@+id/plannerImageView"
        app:layout_constraintTop_toBottomOf="@+id/plannerImageView" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/taskImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/tasks"
        app:civ_border_color="@color/white"
        app:civ_border_width="3dp"
        app:civ_circle_background_color="@color/teal_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bgTextView"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/tasksTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Important Tasks"
        android:textColor="@color/azureish_white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/taskImageView"
        app:layout_constraintStart_toStartOf="@+id/taskImageView"
        app:layout_constraintTop_toBottomOf="@+id/plannerImageView" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settingsImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_baseline_settings_24"
        app:civ_border_color="@color/white"
        app:civ_border_width="3dp"
        app:civ_circle_background_color="#006400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/taskImageView"
        app:layout_constraintTop_toBottomOf="@+id/bgTextView"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/settingsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Settings"
        android:textColor="@color/azureish_white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/settingsImageView"
        app:layout_constraintStart_toStartOf="@+id/settingsImageView"
        app:layout_constraintTop_toBottomOf="@+id/settingsImageView" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/petsImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/pets"
        app:civ_border_color="@color/white"
        app:civ_border_width="3dp"
        app:civ_circle_background_color="@color/pale_cornflower_blue"
        app:layout_constraintEnd_toEndOf="@+id/plannerImageView"
        app:layout_constraintStart_toStartOf="@+id/plannerImageView"
        app:layout_constraintTop_toBottomOf="@+id/twoWeeksTextView"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/petsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="My Pets"
        android:textColor="@color/azureish_white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/petsImageView"
        app:layout_constraintStart_toStartOf="@+id/petsImageView"
        app:layout_constraintTop_toBottomOf="@+id/petsImageView" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/achievementsImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/achievements"
        app:civ_border_color="@color/white"
        app:civ_border_width="3dp"
        app:civ_circle_background_color="@color/russian_violet"
        app:layout_constraintEnd_toEndOf="@+id/taskImageView"
        app:layout_constraintStart_toStartOf="@+id/taskImageView"
        app:layout_constraintTop_toBottomOf="@+id/twoWeeksTextView"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/achievementsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Achievements"
        android:textColor="@color/azureish_white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/achievementsImageView"
        app:layout_constraintStart_toStartOf="@+id/achievementsImageView"
        app:layout_constraintTop_toBottomOf="@+id/achievementsImageView" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/leaderboardImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/leaderboard"
        app:civ_border_color="@color/white"
        app:civ_border_width="3dp"
        app:civ_circle_background_color="#006400"
        app:layout_constraintEnd_toEndOf="@+id/settingsImageView"
        app:layout_constraintStart_toStartOf="@+id/settingsImageView"
        app:layout_constraintTop_toBottomOf="@+id/twoWeeksTextView"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/leaderboardTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Leaderboard"
        android:textColor="@color/azureish_white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/leaderboardImageView"
        app:layout_constraintStart_toStartOf="@+id/leaderboardImageView"
        app:layout_constraintTop_toBottomOf="@+id/leaderboardImageView" />

    <TextView
        android:id="@+id/petductivityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="525dp"
        android:layout_marginEnd="136dp"
        android:layout_marginRight="136dp"
        android:fontFamily="@font/aclonica"
        android:text="Petductivity"
        android:textColor="@color/pale_cornflower_blue"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pokeballMain"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:rotation="-12"
        app:layout_constraintBottom_toBottomOf="@+id/taglineTextViewHome"
        app:layout_constraintStart_toEndOf="@+id/petductivityTextView"
        app:srcCompat="@drawable/pokeball" />

    <TextView
        android:id="@+id/taglineTextViewHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/galada"
        android:text="Productivity PLanner Mobile App"
        android:textColor="@color/azureish_white"
        app:layout_constraintEnd_toEndOf="@+id/petductivityTextView"
        app:layout_constraintTop_toBottomOf="@+id/petductivityTextView" />

    <ImageView
        android:id="@+id/pikachuImageViewHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="-5"
        android:src="@drawable/pikachu"
        app:layout_constraintBottom_toTopOf="@+id/petductivityTextView"
        app:layout_constraintStart_toStartOf="@+id/petductivityTextView" />

    <ImageView
        android:id="@+id/SquirtleImageViewHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:rotation="-2.5"
        android:src="@drawable/squirtle"
        app:layout_constraintBottom_toTopOf="@+id/petductivityTextView"
        app:layout_constraintEnd_toStartOf="@+id/CharImageViewHome"
        app:layout_constraintStart_toStartOf="@+id/petductivityTextView" />

    <ImageView
        android:id="@+id/CharImageViewHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="5"
        android:src="@drawable/charmander"
        app:layout_constraintBottom_toTopOf="@+id/petductivityTextView"
        app:layout_constraintEnd_toEndOf="@+id/pokeballMain" />

    <ImageView
        android:id="@+id/BulbImageViewHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:rotation="2.5"
        android:src="@drawable/bulbasaur"
        app:layout_constraintBottom_toTopOf="@+id/petductivityTextView"
        app:layout_constraintEnd_toEndOf="@+id/pokeballMain"
        app:layout_constraintStart_toEndOf="@+id/pikachuImageViewHome" />


</androidx.constraintlayout.widget.ConstraintLayout>